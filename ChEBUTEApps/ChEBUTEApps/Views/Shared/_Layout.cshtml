<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ChEBUET</title>

    <link href="~/Content/CustomeCSS.css" rel="stylesheet" />
    <style>
        .dropdown-submenu {
            position: relative;
        }

            .dropdown-submenu .dropdown-menu {
                top: 0;
                left: 100%;
                margin-top: -1px;
            }
    </style>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("BodyCSS", required: false)


</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top" style="background-color: #FFA500">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ChEBUET", "Index", "Home", new { area = "" }, new { @style="padding-right: 70px;", @class = "navbar-brand", @id = "fontSize" })

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                    </li>
                    <li>
                        @Html.ActionLink("Teacher", "AddTeacher", "Teacher", new { area = "" }, new { @class = "", @id = ""})
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Faculty & Staff <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>
                                @Html.ActionLink("Faculty", "Faculty", "Home", new { area = "" }, new { @class = "", @id = "" })

                            </li>
                            <li>
                                @Html.ActionLink("Staff", "Staff", "Home", new { area = "" }, new { @class = "", @id = "" })
                            </li>

                        </ul>
                    </li>
                    <li>
                        @Html.ActionLink("Research & Publications", "Index", "ResearchPublications", new { area = "" }, new { @class = "", @id = "" })
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="">Students Corner<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>
                                @Html.ActionLink("Library", "Library", "StudentCorner", new { area = "" }, new { @class = "", @id = "" })
                            </li>
                            <li>
                                @Html.ActionLink("Question Bank", "QuestionBank", "StudentCorner", new { area = "" }, new { @class = "", @id = "" })
                            </li>
                            <li class="dropdown-submenu">
                                <a class="test" tabindex="-1" href="">Batch <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li>
                                        @Html.ActionLink("Info", "Info", "StudentCorner", new { area = "" }, new { @class = "", @id = "" })
                                    </li>
                                    <li>
                                        @Html.ActionLink("Upload's", "File", "StudentCorner", new { area = "" }, new { @class = "", @id = "" })
                                    </li>
                                    <li>
                                        @Html.ActionLink("New Upload", "ModifyUpload", "StudentCorner", new { area = "" }, new { @class = "", @id = "" })
                                    </li>
                                </ul>
                            </li>
                        </ul>

                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="">Notice Board<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>
                                @Html.ActionLink("Update", "Update", "NoticeBoard", new { area = "" }, new { @class = "", @id = "" })
                            </li>
                            <li>
                                @Html.ActionLink("News", "News", "NoticeBoard", new { area = "" }, new { @class = "", @id = "" })
                            </li>

                        </ul>
                    </li>
                    <li>
                        @Html.ActionLink("Competition", "Index", "Competition", new { area = "" }, new { @class = "", @id = "" })
                    </li>
                    <li>
                        @Html.ActionLink("Accounts", "Index", "Accounts", new { area = "" }, new { @class = "", @id = "" })
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="">Others<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>
                                @Html.ActionLink("Academics", "Index", "Academics", new { area = "" }, new { @class = "", @id = "" })
                            </li>
                            <li>
                                @Html.ActionLink("Associations", "Index", "Associations", new { area = "" }, new { @class = "", @id = "" })
                            </li>
                            <li>
                                @Html.ActionLink("Testing and Consultation", "Index", "TestingConsultation", new { area = "" }, new { @class = "", @id = "" })
                            </li>
                            <li>
                                @Html.ActionLink("M A Naser Chair", "Index", "MANaserChair", new { area = "" }, new { @class = "", @id = "" })
                            </li>
                            <li>
                                @Html.ActionLink("Contacts", "Index", "Contacts", new { area = "" }, new { @class = "", @id = "" })
                            </li>
                            <li>
                                @Html.ActionLink("About Us", "Index", "AboutUs", new { area = "" }, new { @class = "", @id = "" })
                            </li>

                        </ul>
                    </li>
                </ul>
            </div>
        </div>

    </nav>

<div class="container body-content jumbotron">
    @RenderBody()
    <hr/>
    <footer>
        <h3 class="text-center" style="font-family: bold; font-weight: bold">&copy; @DateTime.Now.Year - ChEBUET</h3>
    </footer>
    
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
<script>
    $(document).ready(function() {
        $('.dropdown-submenu a.test').on("click", function(e) {
            $(this).next('ul').toggle();
            e.stopPropagation();
            e.preventDefault();
        });
    });
</script>
@RenderSection("BodyScripts", required: false)


</body>
</html>
