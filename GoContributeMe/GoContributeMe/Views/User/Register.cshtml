@model dynamic

@{
    ViewBag.Title = ViewBag.Name;

    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    int UserID = ViewBag.UserID;
}
@section BodyNeededCSS
{
    <link href="~/Content/SearchBar.css" rel="stylesheet" />
    <style>

    </style>
}

<div class="col-md-12 col-sm-12 backgroundImage img-responsive">
    <div class="col-md-12 col-sm-12" style="text-align: center; color: white;">
        <br /><br />
        <h1 style="font-family: Righteous;">
            Many ways to help, one place to start (@UserID)
        </h1>
        <p>Create a free campaign to start giving and receiving support</p>
        <br />
    </div>
    <div class="col-md-12 col-sm-12 webdesigntuts-workshop" style="padding: 0 0 0 254px;">
        <form action="#" method="POST">
            <input type="search" placeholder="Search here ...">
            <button class="btn btn-primary">Search</button>
        </form>
    </div>
    <div class="container" style="height: 530px; width: 100%">
        @*No code Space balnk*@

    </div>
    <div class="btn-group btn-group-justified">
        @Html.ActionLink("Start Fundraising", "Create", "Campaigns", new { area = "" }, new { @class = "btn btn-success" })
        @Html.ActionLink("Fund Someone", "Create", "Campaigns", new { area = "" }, new { @class = "btn btn-primary" })
    </div>
</div>