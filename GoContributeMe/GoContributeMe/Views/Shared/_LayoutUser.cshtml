@model GoContributeMe.Models.ViewModel.ContactUsUserViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>@ViewBag.Title | GoContributeMe.com</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/PopUpWindo.css" rel="stylesheet" />
    <link href="~/Content/RegisterForm.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
    <style>
        .field-validation-error {
            color: red;
        }
    </style>
    @RenderSection("BodyNeededCSS", required: false)
</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container" style="padding-left: 60px;">
            <div class="navbar-header col-xs-12 col-sm-6 col-md-8 col-lg-8">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("GoContributeMe", "Account", "User", new {area = ""}, new {@class = "navbar-brand", @id = "fontSize"})
            </div>

            <div class="navbar-collapse collapse col-xs-12 col-sm-6 col-md-4 col-lg-4">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("How It Works", "About", "User")</li>
                    <li>@Html.ActionLink("Help", "Contact", "User")</li>
                    <!-- Pop Up Window-->
                    <li>
                        <button class="btn btn-primary" style="margin-top: 8px !important;">
                            <span class="glyphicon glyphicon-user"></span> @Html.ActionLink("Sign Out", "Logout", "User", new {area = ""}, new {@style = "color:white;"})
                        </button>
                    </li>
                </ul>
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="" class="">
            <div class="row container">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 jumbotron">
                    <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 footerText">
                        <h3>Get Started</h3>
                        @Html.ActionLink("How It Works", "About", "User", new { area = "" }, new { @class = "", @id = "" })<br />
                        @Html.ActionLink("Pricing and Fees", "About", "User", new { area = "" }, new { @class = "", @id = "" })<br />
                        @Html.ActionLink("Common Questions", "About", "User", new { area = "" }, new { @class = "", @id = "" })<br />
                        @Html.ActionLink("Success Stories", "About", "User", new { area = "" }, new { @class = "", @id = "" })<br />
                        @Html.ActionLink("Sign out", "Logout", "User")<br />
                        <h3>Connect with us</h3>
                        <a href="https://www.twitter.com/" target="_blank">
                            <i class="fa fa-twitter fa-lg" aria-hidden="true"></i>
                        </a>
                        <a href="https://www.facebook.com/" target="_blank">
                            <i class="fa fa-facebook fa-lg" aria-hidden="true"></i>
                        </a>
                        <a href="https://www.youtube.com/" target="_blank">
                            <i class="fa fa-youtube fa-lg" aria-hidden="true"></i>
                        </a>
                        <a href="https://www.rss.com/" target="_blank">
                            <i class="fa  fa-rss fa-lg" aria-hidden="true"></i>
                        </a>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 footerText">
                        <h3>Learn More</h3>
                        @Html.ActionLink("About Us", "About", "User", new { area = "" }, new { @class = "", @id = "" })<br />
                        @Html.ActionLink("The GoContributeMe Blog", "About", "User", new { area = "" }, new { @class = "", @id = "" })<br />
                        @Html.ActionLink("Press", "About", "User", new { area = "" }, new { @class = "", @id = "" })<br />
                        @Html.ActionLink("Fundraising Ideas", "About", "User", new { area = "" }, new { @class = "", @id = "" })<br />
                        @Html.ActionLink("We're Hiring!", "About", "User", new { area = "" }, new { @class = "", @id = "" })<br />
                        <h3>Coworker</h3>
                        <a href="http://www.bing.com/" target="_blank">
                            <img src="/Image/microsoft.png" alt="microsoft bangladesh" style="width: 200px; height: 60px; border: 0;">
                            <!--Microsoft Logo-->
                        </a>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                        @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { id = " ", @class = "form-horizontal" }))
                        {
                            <h3 style="font-family: italic;">Contact Us</h3>
                            <div class="form-group">
                                <div class="inputGroupContainer">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                        @Html.TextBoxFor(x => x.ContactUs.Name, new { @class = "form-control", placeholder = "Name" })
                                    </div>
                                    @Html.ValidationMessageFor(a => a.ContactUs.Name)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="inputGroupContainer">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                                        @Html.TextBoxFor(x => x.ContactUs.Email, new { @class = "form-control", @placeholder = "Email" })
                                    </div>
                                    @Html.ValidationMessageFor(a => a.ContactUs.Email)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="inputGroupContainer">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                                        @Html.TextAreaFor(x => x.ContactUs.Description, new { @class = "form-control", @placeholder = "Description" })
                                    </div>
                                    @Html.ValidationMessageFor(a => a.ContactUs.Description)
                                </div>
                            </div>
                            <div class="row">
                                <div class="">
                                </div>
                                <div class="form-group" style="padding: 0 0 0 15px;">
                                    <button type="submit" class="btn btn-warning">Send <span class="glyphicon glyphicon-send"></span></button>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-2 col-lg-2 footerText">
                        <h3>Support</h3>
                        @Html.ActionLink("Ask a Question", "About", "User", new { area = "" }, new { @class = "", @id = "" })<br />
                        @Html.ActionLink("Help Center", "About", "User", new { area = "" }, new { @class = "", @id = "" })<br />
                        @Html.ActionLink("Supported Countries", "About", "User", new { area = "" }, new { @class = "", @id = "" })<br />
                        @Html.ActionLink("Currencies", "About", "User", new { area = "" }, new { @class = "", @id = "" })<br />
                        <h3>Payment</h3>
                        <i class="fa fa-cc-paypal fa-2x" aria-hidden="true"></i>
                        <i class="fa fa-cc-amex fa-2x " aria-hidden="true"></i>
                        <i class="fa fa-cc-visa fa-2x" aria-hidden="true"></i>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="container footer col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12" style="background-color: #765433; height: 70px; padding-top: 10px  !important;">
                    <div class="footer-top col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-7 col-xl-5 footer-left" style="padding-top: 10px !important;">
                            @using (Html.BeginForm("About", "Home", FormMethod.Post, new {id = " ", @class = ""}))
                            {
                                @Html.AntiForgeryToken()
                                @Html.EditorFor(a => a.Subscriber.Email, new {htmlAttributes = new {@style = "color:white;", @placeholder = "Enter Your Email"}})
                                <input type="submit" value="Subscribe">
                            }
                        </div>

                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-5 col-xl-7 footer-right" style="padding-top:11px !important;background-color: #765433;">
                            <p class="textColor" style="padding-right: 96px; color: white;">&copy; @DateTime.Now.Year -Copyright GoContributeMe. All Rights Reserved | Design by - @Html.ActionLink("SHSA", "Index", "Home", null, new { @class = "textColor" })</p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    <script src='https://www.google.com/recaptcha/api.js'></script>
    <script src="~/Scripts/PopUpWindow.js"></script> 
    <script type="text/javascript">
        $(document).ready(function () {
            

        });
    </script>
    @RenderSection("BodyNeededScripts", required: false)
</body>
</html>
