@model GoContributeMe.Models.Model.Campaign

@{
    ViewBag.Title = "Recipient";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="col-md-12 jumbotron">
    @using (Html.BeginForm("FundRecipient", "Campaigns", FormMethod.Post, new { id = " ", @class = "form-group" }))
    {
        @Html.AntiForgeryToken()
        @*<h2 style="text-align: center;">Create your won Fundrising Campaign</h2>*@
        <br />
        <div class="col-md-offset-2 col-md-10 col-lg-offset-2 col-lg-10">
            <div class="form-style-3">
                <fieldset>
                    <legend>Fund Recipient Information</legend>
                    <div class="form-group col-md-12 col-lg-12">
                        @Html.LabelFor(model => model.RecipientName, htmlAttributes: new { @class = "control-label col-md-3 col-lg-3" })
                        <div class="col-md-6 col-lg-6">
                            @Html.EditorFor(model => model.RecipientName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Recipient Name" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.RecipientName, "", new { @class = "text-danger" })


                    </div>
                    <div class="form-group col-md-12 col-lg-12">
                        @Html.LabelFor(model => model.RecipientNID, htmlAttributes: new { @class = "control-label col-md-3 col-lg-3" })
                        <div class="col-md-6 col-lg-6">
                            @Html.EditorFor(model => model.RecipientNID, new { htmlAttributes = new { @class = "form-control", @placeholder = "Recipient NID" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.RecipientNID, "", new { @class = "text-danger" })


                    </div>

                    <div class="form-group col-md-12 col-lg-12">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-3 col-lg-3" })
                        <div class="col-md-6 col-lg-6">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Recipient Email" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })


                    </div>

                    <div class="form-group col-md-12 col-lg-12">
                        @Html.LabelFor(model => model.MobileNo, htmlAttributes: new { @class = "control-label col-md-3 col-lg-3" })
                        <div class="col-md-6 col-lg-6">
                            @Html.EditorFor(model => model.MobileNo, new { htmlAttributes = new { @class = "form-control", @placeholder = "Recipient Mobile Number" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.MobileNo, "", new { @class = "text-danger" })


                    </div>

                    <div class="form-group col-md-12 col-lg-12">
                        @Html.LabelFor(model => model.TargetAmount, htmlAttributes: new { @class = "control-label col-md-3 col-lg-3" })
                        <div class="col-md-6 col-lg-6">
                            @Html.EditorFor(model => model.TargetAmount, new { htmlAttributes = new { @class = "form-control", @placeholder = "Recipient Amount" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.TargetAmount, "", new { @class = "text-danger" })


                    </div>

                    <div class="form-group col-md-12 col-lg-12">
                        @Html.LabelFor(model => model.CampaignClosingDate, htmlAttributes: new {@class = "control-label col-md-3 col-lg-3"})
                        <div class="col-md-6 col-lg-6">
                            @Html.EditorFor(model => model.CampaignClosingDate, new {htmlAttributes = new {@class = "form-control", @placeholder = "Recipient Closing Date"}})
                        </div>
                        @Html.ValidationMessageFor(model => model.CampaignClosingDate, "", new {@class = "text-danger"})


                    </div>
                    <div class="form-group col-md-12 col-lg-12">
                        <div class="col-md-offset-3 col-md-6 col-lg-offset-3 col-lg-6">
                            <div class="col-xs-3 col-sm-1 col-md-1 col-lg-2">
                                @Html.CheckBoxFor(m => m.TermsConditions, new { @checked = "checked" })
                            </div>

                            <div class="col-xs-9 col-sm-11 col-md-11 col-lg-10">
                                <p style="font-size: 12px;">I agree to the Terms and Conditions </p>
                                @Html.ValidationMessageFor(model => model.TermsConditions, "", new { @class = "text-danger" })


                            </div>

                        </div>
                    </div>

                    <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="col-xs-12 col-sm-12 col-md-offset-2 col-md-10 col-lg-offset-2 col-lg-10">
                            <div class="col-xs-6 col-sm-4 col-md-offset-1 col-md-4">
                                @*<button class="btn btn-warning" type="submit" style="margin-top: 8px !important;">
                                        <span class="fa fa-arrow-left fa-x"></span>Back
                                    </button>*@

                                @Html.ActionLink("Back", "Create")
                            </div>
                            <div class="col-xs-6 col-sm-8 col-md-7">
                                <button class="btn btn-success" type="submit" style="margin-top: 8px !important;">
                                    Submit<span class="fa fa-paper-plane"></span>
                                </button>
                            </div>

                        </div>

                    </div>


                </fieldset>
            </div>
        </div>
    }
</div>
